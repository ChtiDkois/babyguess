html
  include head.pug

  body
    div(class="form")
      h3 L'as du prono ?
      form(method='POST' action='/newProno')
        div.form-group
          label(for='name') T'es qui ? :
          input(type='text', placeholder='Luke Skywaler' name='name')
        div.form-group
          label(for='gender') Fille ou garçon ? :
          input(type='radio', name='gender' value="'F'")
          | Ptite fille
          input(type='radio', name='gender' value="'M'")
          | Ptit gars
        div.form-group
          label(for='ddn') Pour quand ? :
          input(type='date', placeholder='29/08/2019' name='ddn')
        div.form-group
          label(for='weight') Poids (g) ? :
          input(type='number', name='weight')
        div.form-group
          label(for='height') Taille (cm) ? :
          input(type='number', name='height')
        div.form-group
          label(for='girlname') Prénom en cas de fille ? :
          input(type='text', placeholder='Leia' name='girlname')
        div.form-group
          label(for='boyname') Prénom en cas de mec ? :
          input(type='text', placeholder='Luke' name='boyname')
        button(type='submit') Je valide !
